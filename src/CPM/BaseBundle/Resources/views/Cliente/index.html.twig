{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
    	<h1>Cliente</h1>     <a href="{{ path('cliente_new') }}" class="btn btn-primary btn-mini"> <i class="icon-plus icon-white"></i>
                Crear Nuevo
            </a>
        </div>
    <table class="data-tbl-simple table table-hover table-condensed table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Nit</th>
                <th>Direccion</th>
                <th>Telefonos</th>
                <th>Email</th>
                <th>Ciudad</th>
                <th>Mobil</th>                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.nit }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefonos }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.ciudad }}</td>
                <td>{{ entity.mobil }}</td>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}" > <i class="icon-zoom-in"></i> </a><a href="{{ path('cliente_edit', { 'id': entity.id }) }}" ><i class="icon-edit"></i> </a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
