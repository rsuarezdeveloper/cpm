{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
    	<h1>Departamento</h1>     <a href="{{ path('departamento_new') }}" class="btn btn-primary btn-mini"> <i class="icon-plus icon-white"></i>
                Crear Nuevo
            </a>
        </div>
    <table class="data-tbl-simple table table-bordered table-condensed table-striped">
        <thead>
            <tr>                <th>Id</th>                <th>Codigo</th>                <th>Nombre</th>                <th>Latitud</th>                <th>Longitud</th>                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('departamento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.latitud }}</td>
                <td>{{ entity.longitud }}</td>
                <td><a href="{{ path('departamento_show', { 'id': entity.id }) }}" > <i class="icon-zoom-in"></i> </a><a href="{{ path('departamento_edit', { 'id': entity.id }) }}" ><i class="icon-edit"></i> </a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
{% block javascripts -%}

{% endblock %}
