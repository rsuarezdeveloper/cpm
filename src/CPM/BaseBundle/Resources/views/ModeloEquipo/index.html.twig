                <td>{{ entity.marca }}</td>
                <td>{{ entity.descripcion }}</td>
                <td style="text-align:center"><a href="{{ path('modeloequipo_show', { 'id': entity.id }) }}" > <i class="icon-zoom-in"></i> </a><a href="{{ path('modeloequipo_edit', { 'id': entity.id }) }}" ><i class="icon-edit"></i> </a>                </td>
            </tr>
