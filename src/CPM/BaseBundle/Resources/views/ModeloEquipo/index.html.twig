{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
    	<h1>ModeloEquipo</h1>     <a href="{{ path('modeloequipo_new') }}" class="btn btn-primary btn-mini"> <i class="icon-plus icon-white"></i>
                Crear Nuevo
            </a>
        </div>
    <table class="data-tbl-simple table table-bordered table-condensed table-striped table-hover">
