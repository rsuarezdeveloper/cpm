{% extends "::base.html.twig" %}
{% block body %}
<div class="login-container">
	<form action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<div class="well-login">
		{% if error %}
            <div class="alert alert-error">{{ error }}</div>
        {% endif %}
		<div class="control-group">
			<div class="controls">
				<div>
					<input type="text" placeholder="Usuario" class="login-input user-name" id="username" name="_username" value="{{ last_username }}">
				</div>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<div>
					<input type="password" placeholder="Clave" class="login-input user-pass" id="password" name="_password"  >
				</div>
			</div>
		</div>
		<div class="clearfix">
			<button class="btn btn-inverse login-btn" type="submit" id="_submit" name="_submit"  >{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
		</div>
		<div class="remember-me">
			<input class="rem_me" type="checkbox" id="remember_me" name="_remember_me" value="on"> Recordarme
		</div>
	</div>
	</form>
</div>
{% endblock body %}
